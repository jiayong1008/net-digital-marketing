@model DigitalMarketing2.Models.Module

@{
    ViewData["Title"] = "Edit";
}

<section class="module-edit-page min-vh-100 m-auto py-5 pt-10vh col-white w-80">
    <div class="container pt-5">
    <h1>Edit Module</h1>

    <hr />
    <div class="row">
            <div class="col-md-4 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ModuleId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                    <hr />
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                    <hr />
                <div class="form-group">
                    <label asp-for="ModuleOrder" class="control-label"></label>
                    <input asp-for="ModuleOrder" class="form-control" />
                    <span asp-validation-for="ModuleOrder" class="text-danger"></span>
                </div>
                    <hr />
                    <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
