@model DigitalMarketing2.Models.LessonCreateFormModel

@{
    ViewData["Title"] = "Create";
}

<section class="lesson-create-page min-vh-100 m-auto py-5 pt-10vh col-white w-80">
    <div class="container pt-5">
    <h1>Create Lesson</h1>

    <hr />
    <div class="row">
            <div class="col-md-4 mx-auto">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                    <hr />
                <div class="form-group">
                    <label asp-for="Duration" class="control-label"></label>
                    <input asp-for="Duration" class="form-control" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                    <hr />
                <div class="form-group">
                    <label asp-for="LessonOrder" class="control-label"></label>
                    <input asp-for="LessonOrder" class="form-control" />
                    <span asp-validation-for="LessonOrder" class="text-danger"></span>
                </div>
                    <input type="hidden" asp-for="ModuleId" />
                @*<div class="form-group">
                    <label asp-for="ModuleId" class="control-label"></label>
                    <select asp-for="ModuleId" class="form-control" asp-items="@(new SelectList(ViewBag.ModuleList,"ModuleId","Name"))"></select>
                    <span asp-validation-for="ModuleId" class="text-danger"></span>
                </div>*@
                    <hr />
                    <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
                <hr />
                <div class ="d-flex justify-content-center">
                    
                    @*Should go back to module page*@
                    <a asp-controller="Modules" asp-action="Details" asp-route-id="@Model.ModuleId">Back</a>
                </div>
        </div>
    </div>


  </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
