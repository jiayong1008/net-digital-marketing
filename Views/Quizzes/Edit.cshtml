@{
    ViewData["Title"] = "Edit";
}


<section class="lesson-edit-page min-vh-100 m-auto py-5 pt-10vh col-white w-80">
<div class="container pt-5">

    <div class="flex-center mt-5">
        <a asp-action="Index" asp-route-LessonId="@Model.LessonId">
